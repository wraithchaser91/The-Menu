<div id="overlay"></div>
<div class="flex-column">
    <h1>Menus</h1>
    <a href="/menu/new" class="button">Create A New Menu</a>
</div>
<div class="flex-column raisedDiv">
    <% if(typeof menus == "undefined" || menus.length == 0){ %>
        <h3>No menus currently associated with this user</h3>
    <%}else{%>
        <% menus.forEach(item=>{ %>
            <div class="flex-row raisedDiv menuItem">
                <div class="flex-column infoColumn">
                    <h3 title="<%= (item.isPrimary?'Primary Menu':'') %>"><%= item.name %> <sup><%= (item.isPrimary?"âšœ":"") %></sup></h3>
                    <p><%= item.description %></p>
                </div>
                <div class="flex-column buttonColumn">
                    <% if(!item.isPrimary && item.status != 0){%>
                        <form action="<%= `/menu/primary/${item._id}` %>" method="POST">
                            <button>Make Primary</button>
                        </form>
                    <%}%>
                    <form action="<%= `/menu/${item.status==0?"activate":"deactivate"}/${item._id}` %>" method="POST"><button><%= item.status==0?"Activate":"Deactivate"%></button></form>
                    <a href="<%= `/menu/view/${item._id}` %>">Open</a>
                    <a href="<%= `/menu/edit/${item._id}` %>">Edit</a>
                    <h4 class="deleteButton" data="menu/<%= item._id %>">Delete</h4>
                </div>
            </div>
        <%})%>
    <%}%>
</div>

<div class="flex-column raisedDiv" id="popup">
    <h2>Irreversible Action Started</h2>
    <p>Are you sure you wish to delete this menu? Once done it can not be recovered</p>
    <p>If this is a temporary thing you should deactivate the menu instead</p>
    <form action="" method="POST" id="deleteForm">
        <button>Delete</button>
    </form>
    <h4 id="cancelPopup">Back</h4>
</div>

<script src="/js/popup.js"></script>

